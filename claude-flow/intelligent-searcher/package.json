{
  "name": "intelligent-text-searcher",
  "version": "1.0.0",
  "description": "Inteligentní vyhledávač v textových dokumentech s Claude API",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/server.js",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/server.js",
    "install:all": "npm install && cd client && npm install"
  },
  "keywords": [
    "claude-api",
    "text-search",
    "ai",
    "czech",
    "porsche-design"
  ],
  "author": "Claude Flow Hivemind Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "adm-zip": "^0.5.16",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "iconv-lite": "^0.6.3",
    "jschardet": "^3.1.3",
    "mammoth": "^1.11.0",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "xlsx": "^0.18.5",
    "xml2js": "^0.6.2",
    "yauzl": "^3.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
